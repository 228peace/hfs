{
  "name": "hfs",
  "version": "0.3.1",
  "description": "HTTP File Server",
  "keywords": [
    "file server",
    "http server"
  ],
  "homepage": "https://rejetto.com/hfs",
  "license": "GPL-3.0",
  "author": "Massimo Melina <a@rejetto.com>",
  "scripts": {
    "watch-server": "nodemon --ignore tests/ --watch src -e ts,tsx --exec ts-node src/index.ts",
    "start-frontend": "cd frontend && npm run start",
    "start": "node dist",
    "build": "npm install && node timestamp && tsc && cp package*.json *.yaml dist && cd dist && npm ci --production",
    "build-all": "npm run build && cd frontend && npm install && npm run build && cd ..",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "make-exe-after-build": "pkg . -C brotli"
  },
  "bin": "dist/index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": "dist/frontend/**/*",
    "targets": [
      "node16-win"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@node-rs/crc32": "^1.3.1",
    "buffer-crc32": "https://github.com/rejetto/buffer-crc32.git",
    "fast-glob": "^3.2.7",
    "koa": "^2.13.4",
    "koa-better-http-proxy": "^0.2.9",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-mount": "^4.0.0",
    "koa-session": "^6.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/archiver": "^5.1.1",
    "@types/axios": "^0.14.0",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.4",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-session": "^5.10.4",
    "@types/koa-static": "^4.0.2",
    "@types/lodash": "^4.14.178",
    "@types/micromatch": "^4.0.2",
    "@types/mime-types": "^2.1.1",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "axios": "^0.24.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
